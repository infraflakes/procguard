{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["es2017", "dom"],
    "outDir": "assets/js/dist",
    "rootDir": "assets/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "assets/js/**/*.ts"
  ]
}
